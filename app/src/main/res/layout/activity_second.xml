<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activites.MainActivity"
     android:background="@color/graphite">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graphite">




        <TextView
            android:text="Yours Final Resume"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/head"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_below="@+id/head"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/profile" />


        <TextView
            android:id="@+id/nme"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginHorizontal="10dp"
            android:text="Full name"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/phne"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrk_plat"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="number"
            android:hint="phone"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:textColor="@color/white"
           />

        <TextView

            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phne"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:id="@+id/em"
            android:text="Email"
            android:textSize="13sp"
            android:textColor="@color/white"
          />

        <TextView

            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/em"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:text="Social Link"
            android:textColorHint="@color/white"
            android:id="@+id/social"
            android:textSize="13sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/wrk_plat"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/nme"
            android:text="Enter Workplatfor"
            android:textSize="15sp"
            android:textColor="@color/white"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:background="@color/grad"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grad"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/teal_700"
                android:text="Sex :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:text="Gender"
                android:textSize="15sp"

                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/teal_700"
            android:textSize="15sp"

            />


        <TextView

            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Address "
            android:textColor="@color/black"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Expericence:"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/teal_700"

            />



        <TextView

            android:id="@+id/exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lines="7"
            android:text="Work Experince"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/teal_700"
            android:text="Education :"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grad"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Date1"
                android:textColor="@color/teal_200"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Education1"
                android:textSize="15sp" />

        </LinearLayout>

        <!--  first education and date  -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grad"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/teal_200"
                android:text="Date2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Education2"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 2nd container for date and education.-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grad"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/black"
                android:text="Languages"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Bhasa"
                android:id="@+id/bhasa1"
                android:textSize="15sp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Bhasa"
                android:id="@+id/bhasa2"
                android:textSize="15sp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Bhasa"
                android:id="@+id/bhasa3"
                android:textSize="15sp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="Bhasa"
                android:id="@+id/bhasa4"
                android:textSize="15sp"


                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Activites :"
            android:textColor="@color/teal_700"
            android:layout_marginHorizontal="10dp"
            />



        <TextView

            android:id="@+id/AdExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/em"
            android:layout_marginVertical="10dp"
            android:lines="7"
            android:hint="Additional Activities"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Created by Seikh Sam"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>
</ScrollView>







